{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    "baseUrl": ".",
    "paths": { "@/*": ["./*"] }
  },
  "include": ["src", "."],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    ".next",
    "out",
    "**/*.config.*",
    "vite.config.*",
    "vitest.config.*",
    "tsup.config.*",
    "rollup.config.*",
    "webpack.config.*",
    "postcss.config.*",
    "tailwind.config.*",
    "tsconfig.node.json"
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}
